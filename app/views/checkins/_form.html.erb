      <br/>
      <%= f.datetime_select :updated_at %>
    </div>

    <div class="field ">
      <%= f.label :project_id %>
      <br/>
      <%= f.text_field :project_id %>
    </div>
  <% end %>

  <div class="">
    <%= f.text_area :text, :rows => 10, :class => "xlarge" -%>
    <br /><br />
    <%= f.submit :value => "Checkin", :class => "btn" %> at <span id="timer"></span>
  </div>
<% end %>
