<div id="awaiting" class="row-fluid hide">
  <% @labels = ["", "label-success", "label-warning", "label-important", "label-info", "label-inverse"] %>

  <%
     # accept trello color
     # return bootstrap label
     def translate_trello_card_color(string)
       case string
         when "green"
           "label-success"
         when "yellow"
           "label-warning"
         when "orange"
           "label-warning"
         when "red"
           "label-important hide"
         when "blue"
           "label-info"
         when "purple"
           "label-inverse"
       end
     end
  %>

  <div class="span12">
    <div class="row-fluid">
      <div class="span12">
        <h2>Process</h2>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <h4>Awaiting</h4>

        <div class="tasks">
          <% list = Trello::List.find($trello_awaiting_list_id) %>
          <% list.cards.each do |card| %>
            <% if card.labels && card.labels.first && card.labels.first.color == "purple" %>
              <%= link_to card.name, card.url, :alt => card.description %>
              <%= card.due.to_date if card.due %>
              <br>
            <% end %>
          <% end %>
        </div>

        <h4>Waiting to Do</h4>

        <div class="tasks">
          <% list.cards.each do |card| %>
            <% unless card.labels && card.labels.first && card.labels.first.color == "purple" %>
              <%= link_to card.name, card.url, :alt => card.description %>
              <%= card.due.to_date if card.due %>
              <br>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="span3">
        <div>
          <button class="btn" type="button">Empty Inbox</button>
          <p class="hide">
            <br>
            Inbox to empty - Process everything from the inbox.
          </p>
        </div>
      </div>

      <div class="span3">
        <!--
        TODO:
        allow these buttons to be pressed once per day.
        reset at midnight local time
        show a positive affirmation of completion
        -->

        <div>
          <button class="btn btn-primary" type="button">Mindsweep</button>
          <p class="hide">
            <br>
            Mindsweep - get everything out of your head!
          </p>
        </div>

        <!--
        TODO:
        Is it Actionable? What is the desired outcome?
        Is the Trello task status 'fully actionable'?
        -->
      </div>
    </div>
  </div>

  <div class="span12">
    <div class="row-fluid">
      <div class="span12">
        <hr/>
      </div>
    </div>
  </div>
</div>