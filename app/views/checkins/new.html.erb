<div class="row">

  <%= render :partial => "layouts/dashboard" %>
  <hr/>

  <div class="span6 columns">
    <div class="greeting">
      <p>
        Hi <%= @settings[:user] %>,<br/>
        Pardon, but what have you been up to?
      </p>

      <p>
        Sincerely, Your Lovely Nag
      </p>
    </div>

    <%= render 'form' %>

    <hr/>

    <div class="btn-group">
      <a class="btn habit" href="javascript:void(0)">Habits.</a>
    </div>


    <% @habits.each do |habit| %>
      <%= link_to habit.description, "/habits/#{habit.id}", :class => "insertText" %>
      <br/>
    <% end %>
  </div>
  <div class="span10 columns">

    <h1>Checkins</h1>

    <div class="checkins">
      <% @checkins.each do |checkin| %>
        <div class="checkin" style="margin:  0 0 10px 0;">
          <span class="label success">
            <%= link_to (checkin.created_at - 7.hours).strftime("%I:%M%P"), edit_checkin_path(checkin) %>
          </span>
          &nbsp;

          <p class="checkin">
            <%= raw checkin.text %>
          </p>
        </div>
      <% end %>
    </div>

  </div>
</div>
